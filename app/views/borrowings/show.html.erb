

<h2>Borrowing n.  <%=@borrowing.id %>  </h2>
<p>
  <strong>User:</strong>
  <%= @borrowing.user.name %>
</p>

<p>
  <strong>Book:</strong>
  <%= @borrowing.book.title %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @borrowing.due_date %>
</p>

<%if current_user.has_role? :admin%>
    <%= link_to 'Edit', edit_borrowing_path(@borrowing), :class => "btn btn-warning" %> |
    <%= link_to 'Return', @borrowing, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-success" %> |
<%end%>
<%= link_to 'Back', borrowings_path, :class => "btn btn-primary" %>
