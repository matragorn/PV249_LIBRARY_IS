<p id="notice"><%= notice %></p>

<h1>Listing Borrowings</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Book</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @borrowings.each do |borrowing| %>
      <tr>
        <td><%= borrowing.user.name %></td>
        <td><%= borrowing.book.title %></td>
        <td><%= borrowing.due_date %></td>
        <td><%= link_to 'Show', borrowing %></td>
        <td><%= link_to 'Edit', edit_borrowing_path(borrowing) %></td>
        <td><%= link_to 'Destroy', borrowing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Borrowing', new_borrowing_path %>
